.group{
  width: 710rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: #000000;
}
.meta{
  flex-direction: row;
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
}
.title{
  flex: 1;
  text-align: left;
  font-family: PingFangSC-Regular;
  font-size: 35rpx;
  color: #666;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; 
}
.poster{
  width: 100%;
  height: 300rpx;
}
